<!-------JavaScript for Toggle menu-------->
    <script>

      var navLinks = document.getElementById("navlinks")

      function showMenu(){
        navLinks.style.right = "0";
      }
      function hideMenu(){
        navLinks.style.right = "-200px";
      }

      function Init_Set() {
          alert("即将初始化组队及选志愿!");
          $.ajax({
              type: 'POST',
              url: './web_ajax.php',
              data : {action:"init_set"},
              dataType: 'json',
              success: function (data) {
                  if(data.code == 200){
                      alert("初始化成功");
                      window.location.href="./web.php";
                  }else{
                      alert("初始化失败");
                      window.location.href="./web.php";
                  }
              },
              error: function (xhr, type) {

              }
          });
      }

      $('#submit_show_actions_text a').each(function() {
          // 获取当前a标签的href属性
          var href = $(this).attr('href');

          href = href.replace("./", "../../inquiry/");
          // 添加自定义字符串并更新href属性
          $(this).attr('href', href + '&view=true');
      });

    </script>

